		<comps>
			<li Class="Vehicles.CompProperties_FueledTravel">	<!-- 油箱與油耗 -->
				<fuelType>Chemfuel</fuelType>
				<leakDef>Filth_Fuel</leakDef>
				<fuelConsumptionRate>25</fuelConsumptionRate>
				<fuelConsumptionWorldMultiplier>1</fuelConsumptionWorldMultiplier>
				<fuelCapacity>80</fuelCapacity>
			</li>
			<li Class="Vehicles.CompProperties_VehicleTurrets">	<!-- 砲塔 -->
				<turrets>
					<li>
						<turretDef>FA_MW_GrenadeLauncher</turretDef>
						<gizmoLabel>Main Turret</gizmoLabel>			
						<renderProperties>
							<north>(0, 0.25)</north>
							<south>(0, 0.25)</south>
							<east>(0, 0.25)</east>
							<west>(0, 0.25)</west>
						</renderProperties>
						<aimPieOffset>(0, 1)</aimPieOffset>	<!-- 預熱指示器的x,z偏移 -->
						<drawLayer>2</drawLayer>						
						<key>pilotcabin</key>
					</li>
					<li>
						<turretDef>Dreadnought_Autocannon</turretDef>
						<gizmoLabel>dreadnought left hand weapon</gizmoLabel>
						<renderProperties>
							<north>(-0.8, -0.2)</north>
							<south>(0.8, 0.2)</south>
							<east>(-0.2, 0.8)</east>
							<west>(0.2, -0.8)</west>
						</renderProperties>
						<aimPieOffset>(0, 0)</aimPieOffset>
						<angleRestricted>(300, 60)</angleRestricted>	
						<drawLayer>1</drawLayer>
						<key>leftGun</key>
						<parentKey>pilotcabin</parentKey>
					</li>
					<li>
						<turretDef>Dreadnought_PowerFist</turretDef>
						<gizmoLabel>dreadnought right hand weapon</gizmoLabel>
						<renderProperties>
							<north>(0.8, -0.2)</north>
							<south>(-0.8, 0.2)</south>
							<east>(-0.2, -0.8)</east>
							<west>(0.2, 0.8)</west>
						</renderProperties>
						<aimPieOffset>(0, 0)</aimPieOffset>
						<angleRestricted>(300, 60)</angleRestricted>	
						<drawLayer>1</drawLayer>
						<key>rightGun</key>
						<parentKey>pilotcabin</parentKey>
					</li>
				</turrets>
			</li>
		</comps>
		<soundOneShotsOnEvent Inherit = "False">
			<li>
				<key>PawnEntered</key>
				<value>VVE_VehicleEnter</value>
			</li>
			<li>
				<key>PawnExited</key>
				<value>VVE_VehicleEnter</value>
			</li>
			<li>
				<key>IgnitionOn</key>
				<value>VVE_VehicleStart</value>
			</li>
			<li>
				<key>IgnitionOff</key>
				<value>VVE_VehicleStart</value>
			</li>
		</soundOneShotsOnEvent>
		<soundSustainersOnEvent>
			<li>
				<key>(IgnitionOn, IgnitionOff)</key>
				<value>VVE_VehicleEngineHeavy</value>
			</li>
		</soundSustainersOnEvent>
	</Vehicles.VehicleDef>
	
	
	
	
	
