		<description>Dreadnought description</description>
		<buildDef>Dreadnought_Blueprint</buildDef>
		<graphicData>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<texPath>Vehicles/MobileWorker/mobileWorker</texPath>
			<drawSize>(4,4)</drawSize>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<vehicleType>Land</vehicleType>
		<vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
		<size>(3,3)</size>
		<fillPercent>0.9</fillPercent>
		<vehicleCategory>Combat</vehicleCategory>
		<statBases>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<ArmorRating_Heat>1.0</ArmorRating_Heat>
			<Flammability>0</Flammability>
			<MarketValue>2240</MarketValue>
		</statBases>
		<vehicleStats>
			<Mass>500</Mass>
			<MoveSpeed>9</MoveSpeed>
			<CargoCapacity>200</CargoCapacity>
			<RepairRate>0.2</RepairRate>
		</vehicleStats>
		<race>
			<baseBodySize>4</baseBodySize>
		</race>	
		<properties>	<!-- 座位與功能 -->
			<customRoadCosts AssignDefaults = "0.3"/>
			<worldSpeedMultiplier>1</worldSpeedMultiplier>
			<winterSpeedMultiplier>1</winterSpeedMultiplier>
			<vehicleJobLimitations>
				<li>(RepairVehicle, 4)</li>
			</vehicleJobLimitations>
			<roles>
				<li>
					<key>pilot</key>
					<label>pilot</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>				
					<handlingTypes>
						<li>Movement</li>
						<li>Turret</li>
					</handlingTypes>
					<turretIds>
						<li>pilotcabin</li>
						<li>leftGun</li>
						<li>rightGun</li>
					</turretIds>
				</li>
			</roles>
		</properties>	
		<components>	

			<li>
				<key>Engine</key>
				<label>Engine</label>
				<health>100</health>
				<priorityStatEfficiency>true</priorityStatEfficiency>
				<categories><li>MoveSpeed</li></categories>
				<depth>Internal</depth>		
				<reactors>
					<li Class = "Vehicles.Reactor_Explosive">
						<indicator>VF_Explosive</indicator>
						<chance>0.25</chance>
						<radius>3</radius>
						<damageDef>Bomb</damageDef>
					</li>
				</reactors>			
				<hitbox>
					<cells>
						<li>(0, -1)</li>
					</cells>
				</hitbox>				
			</li>		
			<li><!-- fuel tank 100-->
				<key>FuelTank</key>
				<label>fuel tank</label>
				<health>100</health>
				<depth>Internal</depth>			
				<reactors><li Class = "Vehicles.Reactor_FuelLeak"/></reactors>			
				<hitbox><cells><li>(0, -1)</li></cells></hitbox>
			</li>
			<li><!-- Gearbox 50-->
				<key>Gearbox</key>
				<label>gearbox</label>
				<health>50</health>
				<depth>Internal</depth>
				<categories><li>MoveSpeed</li></categories>	
				<hitbox><cells><li>(0, 1)</li></cells></hitbox>			
			</li>
			<li><!-- transmission shaft 40 -->
				<key>TransmissionMotor</key>
				<label>transmission motor</label>
				<health>40</health>
				<depth>Internal</depth>
			</li>			
		<!-- External mobile Part 外部驅動部件-->		
			<li><!-- LeftTrack 150-->
				<key>LeftLeg</key>
				<label>left drive leg</label>
				<health>150</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>
				<tags><li>Wheel</li></tags>
				<hitWeight>2</hitWeight>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Left</side>
				</hitbox>
			</li>
			<li><!-- RightTrack 150-->
				<key>RightLeg</key>
				<label>right drive leg</label>
				<health>150</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>	
				<tags><li>Wheel</li></tags>
				<hitWeight>2</hitWeight>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Right</side>
				</hitbox>
			</li>
			<li>
				<key>RearLeg</key>
				<label>rear drive leg</label>
				<health>150</health>
				<depth>External</depth>
				<categories><li>MoveSpeed</li></categories>	
				<tags><li>Wheel</li></tags>
				<hitWeight>2</hitWeight>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Back</side>
				</hitbox>
			</li>
		<!-- External Platings 外部防禦部件 -->
			<li><!-- FrontArmorPlating 200-->
				<key>FrontArmorPlating</key>
				<label>front armor Plating</label>
				<health>200</health>
				<depth>External</depth>
				<hitWeight>8</hitWeight>	
				<armor>
					<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.8</ArmorRating_Sharp>
				</armor>		
				<hitbox><side>Front</side></hitbox>
			</li>
			<li><!-- LeftArmorPlating 180-->
				<key>LeftArmorPlating</key>
				<label>left armor plating</label>
				<health>180</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>		
				<armor>
					<ArmorRating_Blunt>0.3</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
				</armor>			
				<hitbox><side>Left</side></hitbox>
			</li>
			<li><!-- RightArmorPlating 180-->
				<key>RightArmorPlating</key>
				<label>right armor plating</label>
				<health>180</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>	
				<armor>
					<ArmorRating_Blunt>0.3</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.5</ArmorRating_Sharp>
				</armor>			
				<hitbox><side>Right</side></hitbox>
			</li>
			<li><!-- RoofArmorPlating 150 -->
				<key>RoofArmorPlating</key>
				<label>roof armor plating</label>
				<health>150</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>
				<armor>
					<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.7</ArmorRating_Sharp>
				</armor>
			</li>
			<li><!-- BackArmorPlating 150-->
				<key>BackArmorPlating</key>
				<label>rear armor plating</label>
				<health>150</health>
				<depth>External</depth>
				<hitWeight>5</hitWeight>
				<hitbox>
					<side>Back</side>
				</hitbox>
			</li>
